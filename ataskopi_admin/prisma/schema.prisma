generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(uuid())
  phone               String               @unique
  name                String
  email               String?
  pinHash             String?              @map("pin_hash")
  loyaltyPoints       Int                  @default(0) @map("loyalty_points")
  totalItemsPurchased Int                  @default(0) @map("total_items_purchased")
  role                String               @default("customer")
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")
  currentTierId       String?              @map("current_tier_id")
  outletId            String?              @map("outlet_id")
  totalSpent          Decimal              @default(0) @map("total_spent") @db.Decimal(12, 2)
  loyaltyTransactions LoyaltyTransaction[]
  notifications       Notification[]
  orders              Order[]
  addresses           UserAddress[]
  userVouchers        UserVoucher[]
  currentTier         MembershipTier?      @relation(fields: [currentTierId], references: [id])
  outlet              Outlet?              @relation(fields: [outletId], references: [id])

  @@map("users")
}

model LoyaltySetting {
  id                      String   @id @default(uuid())
  isEnabled               Boolean  @default(true) @map("is_enabled")
  pointsPerItem           Int      @default(1) @map("points_per_item")
  pointValueIdr           Decimal  @default(1000) @map("point_value_idr") @db.Decimal(10, 2)
  minPointsToRedeem       Int      @default(10) @map("min_points_to_redeem")
  maxPointsPerTransaction Int?     @map("max_points_per_transaction")
  maxRedemptionPercentage Int      @default(50) @map("max_redemption_percentage")
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  @@map("loyalty_settings")
}

model MembershipTier {
  id                  String    @id @default(uuid())
  tierLevel           Int       @unique @map("tier_level")
  tierName            String    @map("tier_name")
  minPoints           Int       @map("min_points")
  maxPoints           Int?      @map("max_points")
  benefitsDescription String?   @map("benefits_description")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  users               User[]
  vouchers            Voucher[]

  @@map("membership_tiers")
}

model LoyaltyTransaction {
  id                 String    @id @default(uuid())
  userId             String    @map("user_id")
  orderId            String?   @map("order_id")
  transactionType    String    @map("transaction_type")
  pointsChange       Int       @map("points_change")
  pointsBalanceAfter Int       @map("points_balance_after")
  earningMethod      String?   @map("earning_method")
  calculationDetails Json?     @map("calculation_details")
  notes              String?
  expiresAt          DateTime? @map("expires_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  order              Order?    @relation(fields: [orderId], references: [id])
  user               User      @relation(fields: [userId], references: [id])

  @@map("loyalty_transactions")
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  sortOrder Int       @default(0) @map("sort_order")
  createdAt DateTime  @default(now()) @map("created_at")
  products  Product[]

  @@map("categories")
}

model Product {
  id             String            @id @default(uuid())
  categoryId     String            @map("category_id")
  name           String
  description    String?
  basePrice      Decimal           @map("base_price") @db.Decimal(10, 2)
  imageUrl       String?           @map("image_url")
  isAvailable    Boolean           @default(true) @map("is_available")
  isRecommended  Boolean           @default(false) @map("is_recommended")
  createdAt      DateTime          @default(now()) @map("created_at")
  updatedAt      DateTime          @updatedAt @map("updated_at")
  orderItems     OrderItem[]
  outletProducts OutletProduct[]
  modifiers      ProductModifier[]
  options        ProductOption[]
  variants       ProductVariant[]
  category       Category          @relation(fields: [categoryId], references: [id])

  @@map("products")
}

model ProductVariant {
  id            String      @id @default(uuid())
  productId     String      @map("product_id")
  name          String
  priceModifier Decimal     @default(0) @map("price_modifier") @db.Decimal(10, 2)
  orderItems    OrderItem[]
  product       Product     @relation(fields: [productId], references: [id])

  @@map("product_variants")
}

model ProductOption {
  id        String               @id @default(uuid())
  productId String               @map("product_id")
  name      String
  minSelect Int                  @default(1) @map("min_select")
  maxSelect Int                  @default(1) @map("max_select")
  sortOrder Int                  @default(0) @map("sort_order")
  values    ProductOptionValue[]
  product   Product              @relation(fields: [productId], references: [id])

  @@map("product_options")
}

model ProductOptionValue {
  id               String            @id @default(uuid())
  optionId         String            @map("option_id")
  name             String
  priceModifier    Decimal           @default(0) @map("price_modifier") @db.Decimal(10, 2)
  isDefault        Boolean           @default(false) @map("is_default")
  sortOrder        Int               @default(0) @map("sort_order")
  orderItemOptions OrderItemOption[]
  option           ProductOption     @relation(fields: [optionId], references: [id])

  @@map("product_option_values")
}

model ProductModifier {
  id                 String              @id @default(uuid())
  productId          String              @map("product_id")
  name               String
  price              Decimal             @default(0) @db.Decimal(10, 2)
  isAvailable        Boolean             @default(true) @map("is_available")
  sortOrder          Int                 @default(0) @map("sort_order")
  orderItemModifiers OrderItemModifier[]
  product            Product             @relation(fields: [productId], references: [id])

  @@map("product_modifiers")
}

model Voucher {
  id                  String          @id @default(uuid())
  code                String          @unique
  description         String?
  discountType        String          @map("discount_type")
  discountValue       Decimal         @map("discount_value") @db.Decimal(10, 2)
  maxDiscount         Decimal?        @map("max_discount") @db.Decimal(10, 2)
  minOrder            Decimal?        @map("min_order") @db.Decimal(10, 2)
  startDate           DateTime?       @map("start_date")
  endDate             DateTime?       @map("end_date")
  usageLimit          Int?            @map("usage_limit")
  isActive            Boolean         @default(true) @map("is_active")
  createdAt           DateTime        @default(now()) @map("created_at")
  targetTierId        String?         @map("target_tier_id")
  usedCount           Int             @default(0) @map("used_count")
  pointCost           Int             @default(0) @map("point_cost")
  isRedeemable        Boolean         @default(false) @map("is_redeemable")
  customerEligibility String          @default("ALL") @map("customer_eligibility")
  eligibleUserIds     Json?           @map("eligible_user_ids")
  userUsageLimit      Int?            @map("user_usage_limit")
  validCategoryIds    Json?           @map("valid_category_ids")
  validOrderTypes     Json?           @map("valid_order_types")
  validProductIds     Json?           @map("valid_product_ids")
  userVouchers        UserVoucher[]
  targetTier          MembershipTier? @relation(fields: [targetTierId], references: [id])

  @@map("vouchers")
}

model UserVoucher {
  id         String    @id @default(uuid())
  userId     String    @map("user_id")
  voucherId  String    @map("voucher_id")
  isUsed     Boolean   @default(false) @map("is_used")
  redeemedAt DateTime  @default(now()) @map("redeemed_at")
  usedAt     DateTime? @map("used_at")
  orderId    String?   @map("order_id")
  user       User      @relation(fields: [userId], references: [id])
  voucher    Voucher   @relation(fields: [voucherId], references: [id])

  @@map("user_vouchers")
}

model Outlet {
  id             String          @id @default(uuid())
  name           String
  address        String?
  phone          String?
  latitude       Decimal?        @db.Decimal(10, 8)
  longitude      Decimal?        @db.Decimal(11, 8)
  operatingHours Json?           @map("operating_hours")
  isActive       Boolean         @default(true) @map("is_active")
  createdAt      DateTime        @default(now()) @map("created_at")
  orders         Order[]
  outletProducts OutletProduct[]
  tables         Table[]
  users          User[]

  @@map("outlets")
}

model OutletProduct {
  id          String  @id @default(uuid())
  outletId    String  @map("outlet_id")
  productId   String  @map("product_id")
  isAvailable Boolean @default(true) @map("is_available")
  stockLevel  Int?    @map("stock_level")
  outlet      Outlet  @relation(fields: [outletId], references: [id])
  product     Product @relation(fields: [productId], references: [id])

  @@unique([outletId, productId])
  @@map("outlet_products")
}

model Table {
  id          String   @id @default(uuid())
  outletId    String   @map("outlet_id")
  tableNumber String   @map("table_number")
  qrCode      String   @map("qr_code")
  isOccupied  Boolean  @default(false) @map("is_occupied")
  createdAt   DateTime @default(now()) @map("created_at")
  orders      Order[]
  outlet      Outlet   @relation(fields: [outletId], references: [id])

  @@unique([outletId, tableNumber])
  @@map("tables")
}

model Order {
  id                  String               @id @default(uuid())
  userId              String               @map("user_id")
  outletId            String               @map("outlet_id")
  orderNumber         String               @map("order_number")
  orderType           String               @map("order_type")
  subtotal            Decimal              @db.Decimal(10, 2)
  tax                 Decimal              @default(0) @db.Decimal(10, 2)
  discount            Decimal              @default(0) @db.Decimal(10, 2)
  total               Decimal              @db.Decimal(10, 2)
  paymentMethod       String?              @map("payment_method")
  paymentStatus       String               @default("pending") @map("payment_status")
  orderStatus         String               @default("pending") @map("order_status")
  notes               String?
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")
  deliveryAddress     Json?                @map("delivery_address")
  deliveryFee         Decimal              @default(0) @map("delivery_fee") @db.Decimal(10, 2)
  pointsDiscount      Decimal              @default(0) @map("points_discount") @db.Decimal(10, 2)
  pointsUsed          Int                  @default(0) @map("points_used")
  scheduledTime       DateTime?            @map("scheduled_time")
  serviceFee          Decimal              @default(0) @map("service_fee") @db.Decimal(10, 2)
  tableId             String?              @map("table_id")
  voucherCode         String?              @map("voucher_code")
  loyaltyTransactions LoyaltyTransaction[]
  items               OrderItem[]
  outlet              Outlet               @relation(fields: [outletId], references: [id])
  table               Table?               @relation(fields: [tableId], references: [id])
  user                User                 @relation(fields: [userId], references: [id])

  @@map("orders")
}

model OrderItem {
  id                String              @id @default(uuid())
  orderId           String              @map("order_id")
  productId         String              @map("product_id")
  variantId         String?             @map("variant_id")
  quantity          Int
  unitPrice         Decimal             @map("unit_price") @db.Decimal(10, 2)
  notes             String?
  createdAt         DateTime            @default(now()) @map("created_at")
  selectedModifiers OrderItemModifier[]
  selectedOptions   OrderItemOption[]
  order             Order               @relation(fields: [orderId], references: [id])
  product           Product             @relation(fields: [productId], references: [id])
  variant           ProductVariant?     @relation(fields: [variantId], references: [id])

  @@map("order_items")
}

model OrderItemOption {
  id            String             @id @default(uuid())
  orderItemId   String             @map("order_item_id")
  optionValueId String             @map("option_value_id")
  createdAt     DateTime           @default(now()) @map("created_at")
  optionValue   ProductOptionValue @relation(fields: [optionValueId], references: [id])
  orderItem     OrderItem          @relation(fields: [orderItemId], references: [id])

  @@map("order_item_options")
}

model OrderItemModifier {
  id          String          @id @default(uuid())
  orderItemId String          @map("order_item_id")
  modifierId  String          @map("modifier_id")
  quantity    Int             @default(1)
  unitPrice   Decimal         @map("unit_price") @db.Decimal(10, 2)
  createdAt   DateTime        @default(now()) @map("created_at")
  modifier    ProductModifier @relation(fields: [modifierId], references: [id])
  orderItem   OrderItem       @relation(fields: [orderItemId], references: [id])

  @@map("order_item_modifiers")
}

model UserAddress {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  label     String
  address   String
  latitude  Decimal  @db.Decimal(10, 8)
  longitude Decimal  @db.Decimal(11, 8)
  notes     String?
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id])

  @@map("user_addresses")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  category  String
  title     String
  message   String
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id])

  @@map("notifications")
}

model Promo {
  id           String   @id @default(uuid())
  title        String
  description  String?
  bannerUrl    String   @map("banner_url")
  linkUrl      String?  @map("link_url")
  isActive     Boolean  @default(true) @map("is_active")
  displayOrder Int      @default(0) @map("display_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("promos")
}

model schema_migrations {
  version String @id @unique(map: "schema_migrations_version_idx") @db.VarChar(14)
}

enum aal_level {
  aal1
  aal2
  aal3
}

enum code_challenge_method {
  s256
  plain
}

enum factor_status {
  unverified
  verified
}

enum factor_type {
  totp
  webauthn
}
model DailySalesSummary {
  id              String   @id @default(uuid())
  date            DateTime @db.Date
  outletId        String   @map("outlet_id")
  totalRevenue    Decimal  @db.Decimal(12, 2)
  totalOrders     Int
  totalItems      Int
  averageTicket   Decimal  @db.Decimal(10, 2)
  topProducts     Json     // [{productId, name, qty, revenue}]
  paymentMix      Json     // {CASH: count, QRIS: count, etc}
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@unique([date, outletId])
  @@map("daily_sales_summary")
}
